{
  "extends": "@aryaemami59/tsconfig/node-next/with-js",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "lib": ["ESNext"],
    "libReplacement": false,
    "noEmit": true,
    "outDir": "./dist",
    "rewriteRelativeImportExtensions": true,
    "rootDir": "./",
    "types": ["node"]
  },
  "exclude": ["dist", "**/dist/"],
  "include": ["**/*.*"]
}
